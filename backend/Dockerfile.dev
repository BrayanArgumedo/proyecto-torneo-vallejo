FROM node:20-alpine

# Establecer directorio de trabajo
WORKDIR /app

# Instalar curl para health checks
RUN apk add --no-cache curl

# Copiar package.json
COPY package*.json ./

# Instalar dependencias (incluyendo devDependencies para TypeScript)
RUN npm install

# Copiar tsconfig.json
COPY tsconfig.json ./

# Copiar c√≥digo fuente
COPY . .

# Exponer puerto
EXPOSE 5001

# Comando de desarrollo con ts-node y nodemon
CMD ["npm", "run", "dev"]
