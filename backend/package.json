    "jsonwebtoken": "^9.0.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.2.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.4.5",
    "joi": "^17.13.1",
    "cloudinary": "^2.2.0",
    "multer": "^1.4.5-lts.1",
    "pdfkit": "^0.15.0",
    "date-fns": "^3.6.0"
  },
